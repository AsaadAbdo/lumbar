#!/usr/bin/env node

var fs = require('fs'),
    billy = require('../lib/billy');

var argv = require('optimist').argv;

var config = argv._[0],
    out = argv._[1],
    module = argv.module,
    watch = argv.watch;

// Show help prompt if requested or if the 
// incorrect usage options are supplied
if (argv.h || argv.help || !config || !out) {
  console.error("Usage: billy [--watch] [--controller template] [--module module] configFile outputDir");
  return;
}

var arise = billy.init(config, out),
    worker = watch ? arise.watch : arise.build;

// First figure out what our output looks like
fs.stat(out, function(err, stat) {
    if (err) {
        throw err;
    }

    if (!stat.isDirectory()) {
        throw new Error("Output must be a directory");
    }

    if (argv.controller) {
        arise.setControllerTemplate(argv.controller);
    }

    worker.call(arise, module, function(err, status) {
        if (err) {
            throw err;
        }

        if (status.watch) {
            console.log('\t\033[90mwatching\033[0m ' + status.fileName);
        } else {
            console.log('\t\033[90mcompiled\033[0m ' + status.fileName);
        }
    });
});
